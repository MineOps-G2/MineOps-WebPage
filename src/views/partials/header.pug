header
    a(href="/").header__logo
        i.fas.fa-cube
        span MineOps Notice Board & Community
        //- div#white 
    nav 
        ul
            li
                a(href="/search") Search 
                    i.fas.fa-search
            if loggedIn
                li 
                    a(href="/videos/upload") Post
                li 
                    a(href="/users/edit") Edit Profile 
                li 
                    a(href="/users/logout") Logout
                li 
                    a(href="/"+`users/${loggedInUser._id}`)
                        if !loggedInUser.avatarUrl
                            img.header__avatar(src="https://user-images.githubusercontent.com/77392219/195795944-32e7969d-4142-4a9e-865b-d2ef2d3784c4.jpg", crossorigin)
                        else 
                            if isHeroku
                                img.header__avatar(src=loggedInUser.avatarUrl)
                            else
                                img.header__avatar(src="/"+loggedInUser.avatarUrl)
            else
                li 
                    a(href="/login").header__btn Login
                li 
                    a(href="/join") Join
            
